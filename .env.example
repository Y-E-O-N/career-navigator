# Career Navigator - 환경변수 설정

# =============================================================================
# Supabase 설정 (프로덕션)
# =============================================================================

# Supabase 프로젝트 URL
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co

# Supabase 익명 키 (클라이언트용, 읽기 전용)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase 서비스 롤 키 (크롤러용, 쓰기 권한)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase PostgreSQL 연결 문자열 (Python 크롤러용)
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# =============================================================================
# 데이터베이스 설정 (로컬 개발용)
# =============================================================================

# 데이터베이스 종류: sqlite, postgresql, supabase
DB_TYPE=supabase

# PostgreSQL 설정 (DB_TYPE=postgresql인 경우)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=job_market
PG_USER=postgres
PG_PASSWORD=your_password_here

# =============================================================================
# Cloudflare Pages 설정
# =============================================================================

# Cloudflare API 토큰
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Cloudflare 계정 ID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# =============================================================================
# LLM API 설정 (선택사항 - AI 분석 기능 사용시)
# =============================================================================

# Google Gemini API (권장)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API (대체)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT API (대체)
# OPENAI_API_KEY=your_openai_api_key_here

# LLM 제공자 선택: gemini, anthropic, openai
LLM_PROVIDER=gemini

# =============================================================================
# 크롤러 설정
# =============================================================================

# 요청 간 딜레이 (초)
CRAWLER_DELAY=2.0

# 최대 재시도 횟수
CRAWLER_MAX_RETRIES=3

# 키워드당 최대 페이지 수
CRAWLER_MAX_PAGES=10

# =============================================================================
# 스케줄러 설정 (GitHub Actions에서는 불필요)
# =============================================================================

# 스케줄러 활성화
SCHEDULER_ENABLED=false

# 실행 시간 (24시간 형식)
SCHEDULER_TIME=09:00

# 타임존
SCHEDULER_TIMEZONE=Asia/Seoul

# =============================================================================
# 웹사이트 설정
# =============================================================================

# 프로덕션 사이트 URL
SITE_URL=https://career-navigator.pages.dev

# ISR 재검증 시크릿 (임의의 문자열)
REVALIDATE_SECRET=your_random_secret_string_here

# =============================================================================
# 로깅 설정
# =============================================================================

# 로그 레벨: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
